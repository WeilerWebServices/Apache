            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-compiler-plugin</artifactId>
            <configuration>
              <release>${javaVersion}</release>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>

